{
  "name": "@manila/backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist node_modules",
    "db:start": "docker compose -f docker-compose.db.yml up -d",
    "db:stop": "docker compose -f docker-compose.db.yml down",
    "db:logs": "docker compose -f docker-compose.db.yml logs -f",
    "db:clean": "docker compose -f docker-compose.db.yml down -v",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:prod:build": "docker compose -f docker-compose.prod.yml build",
    "docker:prod:build:fresh": "docker compose -f docker-compose.prod.yml build --no-cache",
    "docker:prod:up": "docker compose -f docker-compose.prod.yml up",
    "docker:prod": "pnpm docker:prod:build && pnpm docker:prod:up -d",
    "docker:prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "docker:prod:status": "docker compose -f docker-compose.prod.yml ps",
    "docker:prod:down": "docker compose -f docker-compose.prod.yml down",
    "docker:prod:clean": "docker compose -f docker-compose.prod.yml down -v"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.50",
    "@ai-sdk/openai": "^2.0.74",
    "@clerk/fastify": "^2.6.5",
    "@fastify/cors": "^10.1.0",
    "@fastify/helmet": "^12.0.1",
    "@fastify/multipart": "^9.3.0",
    "@fastify/rate-limit": "^10.3.0",
    "@trpc/server": "^11.0.0-rc.502",
    "ai": "^5.0.104",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.24.0",
    "drizzle-orm": "^0.33.0",
    "fastify": "^5.6.2",
    "jsonwebtoken": "^9.0.2",
    "pdf-parse": "^2.4.5",
    "pgvector": "^0.2.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "postgres": "^3.4.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
